<!DOCTYPE html>
<html lang="en">

<%- include('includes/header'); %>

  <body>
    <%- include('includes/nav'); %>
      <div class="container mt-5">
        <h1>Registration</h1>
        <% if (message.type) { %>
          <div class="alert alert-<%= message.type === 'success' ? 'success' : 'danger' %>" role="alert">
            <%= message.body %>
          </div>
          <% } %>
            <form method="POST" action="/register">
              <div class="from-group">
                <label for="name">Name<sup class="text-danger">*</sup></label>
                <input 
                type="text" 
                class="form-control <%= errors.name ? 'is-invalid' : '' %>" 
                id="name" 
                name="name"
                value="<%= formData.name %>"
                maxlength="64"
                minlength="2"
                
                >
                <% if(errors.name) { %>
                <div class="invalid-feedback">
                  <%= errors.name[0] %>
                </div>
                <% } %>
              </div>

              <div class="from-group">
                <label for="email">Email address<sup class="form-label">*</sup></label>
                <input 
                type="email" 
                class="form-control <%= errors.email ? 'is-invalid' : '' %>" 
                id="email"
                name="email"
                value="<%= formData.email%>"
                aria-describedby="emailHelp"
                >
                <% if (errors.email) { %>
                  <div class="invalid-feedback">
                    <%= errors.email[0] %>
                  </div>
                  <% } %>
              </div>

              <div class="from-group">
                <label for="password">password</label><sup class="form-label">*</sup></label>
                <input 
                type="password" 
                class="form-control <%= errors.password ? 'is-invalid' : '' %>" 
                id="password"
                name="password"
                required>
              </div>

              <div class="from-group">
                <label for="password">Repeat Password</label><sup class="form-label">*</sup></label>
                <input 
                type="password" 
                class="form-control" 
                id="repeat_password"
                name="repeat_password"
                required>
              </div>
              

              <div class="from-group>
            <input type=" checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">Check me out</label>
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
      </div>
      <%- include('includes/footer'); %>
  </body>

</html>